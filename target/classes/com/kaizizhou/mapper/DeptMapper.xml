<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaizizhou.mapper.DeptMapper">
    <insert id="insertDept">
        insert into dept(name,create_time,update_time) values(#{name},#{createTime},#{updateTime})
    </insert>
    <update id="updateDept">
        update dept set name=#{name},update_time=#{updateTime} where id=#{id}
    </update>

    <select id="findAll" resultType="com.kaizizhou.pojo.Dept">
        select * from dept order by update_time desc
    </select>
    <select id="getById" resultType="com.kaizizhou.pojo.Dept">
        select * from dept where id=#{id}
    </select>

    <delete id="deleteById">
            delete from dept where id=#{id}
    </delete>

</mapper>